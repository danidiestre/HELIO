<%= render "shared/progressbar", step: 2 %>
<div class="container">
  <div class="form-wrapper">
    <div class="mt-2">
      <h2 class="mt-3">Elimina categorias</h2>
      <p class="mb-0">Elimina las categorias que no te gusten. Si te gustan todas, no elimines ninguna y pasa al siguiente paso.</p>
    </div>
    <%= simple_form_for @booking_categories do |f|%>
      <div class="row">
        <% Category.all.each do |cat| %>
          <div class="col-6">
            <input type="text" class="hidden" name="booking_category[test]" value="0">
            <input type="checkbox" class="hidden" name="booking_category[category_ids][]" id="check_<%= cat.name %>" value="<%= cat.id %>">
            <label for="check_<%= cat.name %>" class="w-100 d-flex align-items-center justify-content-center general-card categories p-1 mb-2" style="background-image:url( <%= cl_image_path cat.photo.key %> ); background-size: cover;">
              <h6><%= cat.name %></h6>
            </label>
          </div>
        <% end %>
      </div>
      <input id="button-category" class="button-rounded my-3" type="submit" value="SIGUIENTE" name="commit">
    <% end %>
  </div>
</div>
