<div class="pick-dates">
  <%= render "shared/progressbar", step: 1 %>
  <div class="container ">
    <div class="">
      <h3 class="mt-3">Escoje fechas</h3>
      <div class="mt-2">
        <p>El dia del evento estará comprendido dentro del rango de fechas que selecciones.</p>
      </div>

      <div class="pick-dates">
        <%= simple_form_for @booking_dates do |f| %>
          <%= f.input :dates, label: false, input_html: {class: "datepicker hidden"} %>
          <input class="button-rounded fixed-button" type="submit" value="SIGUIENTE" name="commit">
        <% end %>
      
      
      </div>
    </div>
  </div>
</div>


<div class="pick-dates-desktop">

  <%= render "shared/progressbar", step: 1 %>
  <div class="container form-container-desktop">
    <div class="dates-form">
      <h3 class="mt-3">Escoje fechas</h3>
      <div class="mt-2">
        <p>El dia del evento estará comprendido dentro del rango de fechas que selecciones.</p>
      </div>
      <div class="calendar-desktop">
      
        <%= simple_form_for @booking_dates do |f| %>
          <%= f.input :dates, label: false, input_html: {class: "datepicker hidden"} %>

          <div class="button-desktop-dates">
          
            <input class="button-rounded-desktop fixed-button-desktop" type="submit" value="SIGUIENTE" name="commit">
          
          </div>
        <% end %>
        
      
      </div>
    </div>
  </div>
</div>


